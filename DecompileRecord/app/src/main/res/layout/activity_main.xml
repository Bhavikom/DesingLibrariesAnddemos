<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/activity_main" android:padding="20dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="100dp">
        <ImageView android:layout_gravity="center" android:id="@+id/img_video" android:padding="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_video"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="2">
            <ImageView android:id="@+id/img_video_user" android:padding="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ic_video_user" android:layout_weight="1"/>
            <ImageView android:id="@+id/img_camera" android:padding="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_camera" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="2">
            <ImageView android:id="@+id/img_whiteboard" android:padding="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ic_settings" android:layout_weight="1"/>
            <ImageView android:id="@+id/img_gallery" android:padding="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_gallery" android:layout_weight="1"/>
        </LinearLayout>
        <ImageView android:layout_gravity="center" android:id="@+id/img_more" android:padding="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ic_help2"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:layout_gravity="bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="2">
        <android.support.p003v7.widget.AppCompatButton android:textColor="@android:color/white" android:id="@+id/btn_skip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/id_skip_txt" android:layout_weight="1" style="@style/Widget.AppCompat.Button.Colored"/>
        <android.support.p003v7.widget.AppCompatButton android:textColor="@android:color/white" android:id="@+id/btn_next" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/id_next_txt" android:layout_weight="1" android:layout_marginStart="2dp" style="@style/Widget.AppCompat.Button.Colored"/>
    </LinearLayout>
</FrameLayout>
