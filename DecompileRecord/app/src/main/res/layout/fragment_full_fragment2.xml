<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/durec_welcome_view2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/durec_fw_close"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|center_vertical|center_horizontal|center"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/ic_close_lay1" />

    <ImageView
        android:id="@+id/durec_guide_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_vertical|center_horizontal|center"
        android:layout_marginLeft="31dp"
        android:layout_marginBottom="185dp"
        android:src="@drawable/welcome_guide_track" />

    <FrameLayout
        android:id="@+id/durec_float_center_layout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="245dp"
        android:layout_marginEnd="33dp">

        <ImageView
            android:id="@+id/durec_float_center_iconview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right|center_vertical|center_horizontal|center" />
    </FrameLayout>

    <ImageView
        android:id="@+id/durec_guide_finger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical|center_horizontal|center"
        android:src="@drawable/hand_touch1"
        android:visibility="invisible" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="223dp"
        android:gravity="center"
        android:text="@string/frag_full_2_msg"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse" />
</FrameLayout>
