<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/id_take_tour_page_1_title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0">

        <android.support.p003v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLines="1"
            android:text="@string/id_control_from_txt"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <android.support.p003v7.widget.AppCompatTextView
            android:id="@+id/id_take_tour_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/id_floating_buttons_txt"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.p003v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toBottomOf="@+id/id_take_tour_page_1_title_txt">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/id_take_tour_floating_action_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/id_take_tour_button_container"
                app:layout_constraintEnd_toEndOf="0"
                app:layout_constraintStart_toStartOf="0"
                app:layout_constraintTop_toTopOf="0">

                <android.support.p003v7.widget.AppCompatImageView
                    android:id="@+id/id_take_tour_floating_go_live"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_floating_go_live_normal"
                    app:layout_constraintCircle="@+id/id_take_tour_main_app_image"
                    app:layout_constraintCircleAngle="300"
                    app:layout_constraintCircleRadius="80dp" />

                <android.support.p003v7.widget.AppCompatImageView
                    android:id="@+id/id_take_tour_floating_record_video"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_video"
                    app:layout_constraintCircle="@+id/id_take_tour_main_app_image"
                    app:layout_constraintCircleAngle="0"
                    app:layout_constraintCircleRadius="80dp" />

                <android.support.p003v7.widget.AppCompatImageView
                    android:id="@+id/id_take_tour_floating_white_board"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_floating_explainer_normal_button"
                    app:layout_constraintCircle="@+id/id_take_tour_main_app_image"
                    app:layout_constraintCircleAngle="240"
                    app:layout_constraintCircleRadius="80dp" />

                <android.support.p003v7.widget.AppCompatImageView
                    android:id="@+id/id_take_tour_floating_more_option"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_floating_more_normal"
                    app:layout_constraintCircle="@+id/id_take_tour_main_app_image"
                    app:layout_constraintCircleAngle="180"
                    app:layout_constraintCircleRadius="80dp" />

                <android.support.p003v7.widget.AppCompatImageView
                    android:id="@+id/id_take_tour_floating_gallery"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_gallery"
                    app:layout_constraintCircle="@+id/id_take_tour_main_app_image"
                    app:layout_constraintCircleAngle="120"
                    app:layout_constraintCircleRadius="80dp" />

                <android.support.p003v7.widget.AppCompatImageView
                    android:id="@+id/id_take_tour_floating_take_screenshot"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_camera"
                    app:layout_constraintCircle="@+id/id_take_tour_main_app_image"
                    app:layout_constraintCircleAngle="60"
                    app:layout_constraintCircleRadius="80dp" />

                <android.support.p003v7.widget.AppCompatImageView
                    android:id="@+id/id_take_tour_main_app_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_launcher"
                    app:layout_constraintBottom_toBottomOf="0"
                    app:layout_constraintEnd_toEndOf="0"
                    app:layout_constraintStart_toStartOf="0"
                    app:layout_constraintTop_toTopOf="0" />
            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:id="@+id/id_take_tour_button_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp"
                app:layout_constraintBottom_toBottomOf="0"
                app:layout_constraintEnd_toEndOf="0"
                app:layout_constraintStart_toStartOf="0"
                app:layout_constraintTop_toBottomOf="@+id/id_take_tour_floating_action_container">

                <android.support.p003v7.widget.AppCompatButton
                    android:id="@+id/id_take_tour_positive_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:ems="15"
                    android:text="Take Tour"
                    android:textColor="@android:color/white" />

                <android.support.p003v7.widget.AppCompatButton
                    android:id="@+id/id_take_tour_negative_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimary"
                    android:ems="15"
                    android:text="Skip"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.p003v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
